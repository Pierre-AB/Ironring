<div class="projects-details-page grey-bg">

  <img class="project-detail-picture" src="{{project.imageUrl}}" alt="project-picture" />

  <div class="project-detail-data">
    <div class="project-detail-col1">
      <h1 class="projects-details-name">{{project.name}} &#8226; </h1>
      <p class="project-detail-module">&nbsp; Module {{project.module}}</p>
      <p class="projects-details-description">{{project.description}}</p>


      {{#if userIsUploader}}
      <div class="flex">
        <a class="small-btn blue-btn" href="/projects/{{project.id}}/edit">Edit</a>
        <form action="/projects/{{project.id}}/delete" method="POST"><button class="small-btn light-btn">Delete</button>
        </form>
      </div>
      {{/if}}
    </div>

    <div class="project-detail-col2">
      <p class="projects-details-name">Details</p>

      <!-- TABLEAU DETAILS -->
      <table style="width: 100%;">

        <!-- Ligne Creator -->
        <tr>
          <td>
            <span class="ico"><i class="fas fa-user"></i></span>
            <span class="projects-details-answer">Creator</span>
          </td>
          <td>
            <a href="/creatorProfile/{{creator._id}}">{{creator.firstName}} {{creator.lastName}}</a>
          </td>
        </tr>

        <!-- Ligne Creation date -->
        <tr>
          <td>
            <span class="ico"><i class="fas fa-calendar"></i></span>
            <span class="projects-details-answer">Creation date</span>
          </td>
          <td>
            {{project.year_creation}}
          </td>
        </tr>

        <!-- Ligne Tech used -->
        <tr>
          <td>
            <span class="ico"><i class="fas fa-microchip"></i></span>
            <span class="projects-details-answer">Tech used</span>
          </td>
          <td>
            {{project.techno}}
          </td>
        </tr>

        {{#if project.github}}
        <!-- Ligne Github -->
        <tr>
          <td>
            <span class="ico"><i class="fas fa-database"></i></span>
            <span class="projects-details-answer">Github</span>
          </td>
          <td>
            <a href="{{project.github}}">{{project.github}}</a>
          </td>
        </tr>
        {{/if}}
    
        {{#if project.url}}
        <!-- Ligne URL -->
        <tr>
          <td>
            <span class="ico"><i class="fas fa-tv"></i></span>
            <span class="projects-details-answer">URL</span>
          </td>
          <td>
            <a href="{{project.url}}">{{project.url}}</a>
          </td>
        </tr>
        {{/if}}
      </table>

      
      


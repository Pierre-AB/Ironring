<div class="signup-bg">

  <div id="signup" class="signup-box">
    <h1 class="form-title">Log-in</h1>

    <form action="/login" method="POST">
      <!-- FIELD - Email -->
      <label for="input-email">Email</label>
      <input type="email" id="input-email" name="email" placeholder="sheldon_cooper@caltech.edu">

      <!-- FIELD - Password -->
      <label for="input-password">Password</label>
      <input type="password" name="password" id="input-password" placeholder="********">

      <!-- BUTTON - Create account -->
      <button type="submit" class="small-btn blue-btn">Log-in</button>
      <a class="signup-tiny" href="/signup">Not a member? Create an account ðŸ‘‹</a>

      <!-- ERROR MESSAGE -->
      {{#if errorMessage}}
      <p class="error">{{errorMessage}}</p>
      {{/if}}
    </form>
  </div>

</div>